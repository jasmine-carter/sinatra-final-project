<h2>Edit <%=@game.name%>! </h2>

<form method="POST" action="/games/<%=@game.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for "name"> Edit Game Name</label>
  <input type="text" name="name" id="name" value="<%=@game.name%>">
  <br>
  <label for "rating">Edit Your Rating</label>
  <input type="text" name="rating" id="rating" value="<%=@game.rating%>">
  <br>

  <label for "review">Edit Your Review</label>
  <textarea id="review" name="review" rows="5" cols="50" wrap="hard" maxlength="400"><%=@game.review%></textarea>
  <br>
  <input type="submit" value="submit" name="Edit Game" id="Edit Game">

</form>
